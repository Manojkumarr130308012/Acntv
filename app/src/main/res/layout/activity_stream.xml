<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stream">

    <com.google.android.exoplayer2.ui.PlayerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.7"
        android:background="#000000"
        app:resize_mode="fill"
        android:focusable="true"
        app:controller_layout_id="@layout/my_exo_player_control_view"
        android:id="@+id/exoPlayerView">

    </com.google.android.exoplayer2.ui.PlayerView>
    <ProgressBar android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/progressBar" android:layout_centerInParent="true"/>
</RelativeLayout>